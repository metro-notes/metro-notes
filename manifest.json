{
    "name": "Metro Notes",
    "version": "1",
    "description": "A sticky notes application that lives above your websites. Inspired by the Windows Metro UI",
    "background_page": "background.html",
    "icon": {
         "16": "icon16.png",
         "48": "icon48.png",
         "128": "icon128.png"
    },

	"options_page": "options.html",

    "browser_action": {
	"default_icon": "icon19.png",
        "name": "Show notes"
    },
    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["style.css"],
            "js": ["jquery.js", "jquery.event.drag-2.0.min.js", "script.js,", "options.js"],
            "run-at": "document_end" 
        }
    ]
}
